<% if @book.errors.any? %>
<ul>
  <% @book.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<section class="form">
<%= form_for @book do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :pages %>
    <%= f.number_field :pages, min: 1 %>
  </p>

  <p>
    <%= f.label :year_published %>
    <%= f.number_field :year_published, min: 1000 %>
  </p>

  <p>
    <label for="author_list">Authors</label>
    <input type="text" name="author_list" placeholder="Comma Seperate Authors">
  </p>

  <p>
    <%= f.label :thumbnail %>
    <%= f.text_field :thumbnail, placeholder: 'Optional' %>
  </p>

  <p><%= f.submit %></p>

<% end %>
</section>
